alias colours='for code in {0..255}; do echo -e "\e[38;05;${code}m $code: Test"; done'
alias tmux='tmux -2'
alias scp='scp -p'
alias l='ls -CF'
alias la='ls -lah'
alias ls='ls --color=auto'
alias gvg='cd ~/Sites/gant-chef && vagrant'
alias dmach='docker-machine'
alias dcc='docker rm $(docker ps -a -q)'
alias dci='docker rmi $(docker images | grep "^<none>" | awk '\''{print $7}'\'')'
alias vim='nvim'
alias prune='git remote prune origin'
alias gitprune='git branch -r | awk '\''{print $1}'\'' | egrep -v -f /dev/fd/0 <(git branch -vv | grep origin) | awk '\''{print $1}'\'''
alias cat="batcat"
alias preview="fzf --preview 'bat --color \"always\" {}'"
alias f="fzf --preview 'batcat --color \"always\" {}'"
alias glances="glances --disable-plugin ip"
alias dockstopall='sudo docker stop $(sudo docker ps -aq)'
alias tgp='terragrunt plan'
alias tga='terragrunt apply'
alias tgd='terragrunt destroy'
alias s3='s3cmd'
alias gitclean='git branch --merged | egrep -v "(^\*|master|main|dev|alpha|beta|rc)" | xargs git branch -d'
alias kubectx='kubectl-ctx'
alias k='/snap/bin/kubectl'
